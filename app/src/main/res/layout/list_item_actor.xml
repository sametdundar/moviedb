<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="12dp"
    >

    <ImageView
        android:id="@+id/ivActor"
        android:layout_width="70dp"
        android:layout_height="102dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.sametdundar.movieapp.customview.MovieTextView
        android:id="@+id/tvActorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivActor"
        app:layout_constraintEnd_toEndOf="@id/ivActor"
        app:layout_constraintTop_toBottomOf="@id/ivActor"
        tools:text="Name"
        android:textSize="12sp"
        />

    <com.sametdundar.movieapp.customview.MovieTextView
        android:id="@+id/tvDirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivActor"
        app:layout_constraintEnd_toEndOf="@id/ivActor"
        app:layout_constraintTop_toBottomOf="@id/tvActorName"
        android:text="Director"
        android:textSize="11sp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>